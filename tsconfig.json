{
        "compilerOptions": {
                "target": "esnext",
                "module": "esnext",
                "strict": true,
                "importHelpers": true,
                "moduleResolution": "node",
                "experimentalDecorators": true,
                "resolveJsonModule": true,
                "esModuleInterop": true,
                "allowSyntheticDefaultImports": true,
                "baseUrl": ".",
                "types": [
                        "webpack-env",
                        "firefox-webext-browser",
                        "vuetify"
                ],
                "typeRoots": [
                        "./node_modules/@types",
                        "./node_modules/vuetify/types"
                ],
                "paths": {
                        "@*": [
                                "src/*"
                        ]
                },
                "lib": [
                        "esnext",
                        "dom",
                        "dom.iterable",
                        "scripthost"
                ],
                "jsx": "preserve"
        },
        "include": [
                "src/**/*.ts",
                "src/**/*.tsx",
                "src/**/*.vue",
                "tests/**/*.ts",
                "tests/**/*.tsx"
        ],
        "exclude": [
                "node_modules"
        ]
}
